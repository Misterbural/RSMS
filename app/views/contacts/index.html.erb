<!-- <p id="notice"><%= notice %></p> -->
<div class="container-fluid">
  <% if notice %>
  <div class="panel panel-success" id="infoBox">
    <div class="panel-heading">
      <h3 class="panel-title">Successfuly</h3>
    </div>
    <div class="panel-body">
      <%= notice %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">All Contacts</h1>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.id %></td>
          <td><%= contact.name %></td>
          <td><%= contact.number %></td>
          <!-- <td><%= link_to 'Show', contact %></td> -->
          <td class="btn-position-table">
            <%= link_to edit_contact_path(contact) , class: "btn btn-info" do %>
               <%= icon('edit', 'Edit') %>
            <% end %>
            
            <%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" do %>
              <%= icon('trash-o', 'Delete') %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Contact', new_contact_path, class: "btn btn-success" %>
</div>

<script type="text/javascript">
  jQuery(document).ready(function() {
    infoBoxFadeOut();
  })

</script>