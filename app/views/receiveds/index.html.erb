<!-- <p id="notice"><%= notice %></p> -->
<div class="container-fluid">
  <% if notice %>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Successfuly</h3>
    </div>
    <div class="panel-body">
      <%= notice %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">All Receiveds</h1>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Send by</th>
        <th>Text</th>
        <th>Command</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @receiveds.each do |received| %>
        <tr>
          <td><%= received.id %></td>
          <td><%= received.send_by %></td>
          <td><%= received.content %></td>
          <td><%= received.is_command %></td>
          <td class="btn-position-table">
            <%= link_to edit_received_path(received), class: "btn btn-info" do %>
               <%= icon('edit', 'Edit') %>
            <% end %>
            
            <%= link_to received, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" do %>
              <%= icon('trash-o', 'Delete') %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

