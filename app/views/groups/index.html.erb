<!-- <p id="notice"><%= notice %></p> -->
<div class="container-fluid">
  <% if notice %>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Successfuly</h3>
    </div>
    <div class="panel-body">
      <%= notice %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">All Groups</h1>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
          <td><%= group.name %></td>
          <td class="btn-position-table">
            <%= link_to group, class: "btn btn-success" do %>
              <%= icon('eye', 'Show') %>
            <% end %>

            <%= link_to edit_group_path(group), class: "btn btn-info" do %>
               <%= icon('edit', 'Edit') %>
            <% end %>
            
            <%= link_to group, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" do %>
              <%= icon('trash-o', 'Delete') %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Group', new_group_path, class: "btn btn-success" %>
</div>