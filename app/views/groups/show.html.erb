<div class="container-fluid">
	<% if notice %>
	  <div class="panel panel-success" id="infoBox">
	    <div class="panel-heading">
	      <h3 class="panel-title">Successfuly</h3>
	    </div>
	    <div class="panel-body">
	      <%= notice %>
	    </div>
	  </div>
	<% end %>

	<div class="row">
	    <div class="col-lg-12">
	      <h1 class="page-header">Group : <%= @group.name %></h1>
	    </div>
	</div>
	<table class="table table-striped table-hover">
		<thead>
		  <tr>
		    <th>#</th>
		    <th>Name</th>
		    <th>Number</th>
		  </tr>
		</thead>
		<tbody>
		    <% @users.each do |contact| %>
		    	<tr>
		    		<td><%= contact.id %></td>
		    		<td><%= contact.name %></td>
		    		<td><%= contact.number %></td>
		    	</tr>
			<% end %>
		</tbody>
	</table>	
	<%= link_to 'Edit', edit_group_path(@group), class: "btn btn-success" %>
	<%= link_to 'Back', groups_path, class: "btn btn-danger" %>
 </div>


<script type="text/javascript">
  jQuery(document).ready(function() {
    infoBoxFadeOut();
  })

</script>