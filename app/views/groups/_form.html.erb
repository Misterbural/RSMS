<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %> <br>
      <% @contacts.each do |contact| %>
        <% if @usersInGroup.include? contact %>
          <%= check_box_tag "contacts[]", contact.id, true %>
        <% else %>
          <%= check_box_tag "contacts[]", contact.id, false %>
        <% end %>
        <%= label_tag(:contact, contact.name) %>
        <br>
      <% end %>    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
