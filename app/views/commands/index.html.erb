<div class="container-fluid">
  <% if notice %>
  <div class="panel panel-success" id="infoBox">
    <div class="panel-heading">
      <h3 class="panel-title">Successfuly</h3>
    </div>
    <div class="panel-body">
      <%= notice %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Listing Commands</h1>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Script</th>
        <th>Admin</th>
        <th colspan="3"></th>
    </tr>
  </thead>
      </tr>
    </thead>

    <tbody>
      <% @commands.each do |command| %>
      <tr>
        <td><%= command.name %></td>
        <td><%= command.script %></td>
        <td><%= command.admin %></td>
        <td class="btn-position-table">
          <%= link_to command, class: "btn btn-success" do %>
              <%= icon('eye', 'Show') %>
            <% end %>
          <%= link_to edit_command_path(command) , class: "btn btn-info" do %>
               <%= icon('edit', 'Edit') %>
          <% end %>
          <%= link_to command, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" do %>
              <%= icon('trash-o', 'Delete') %>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Command', new_command_path, class: "btn btn-success" %>
</div>

<script type="text/javascript">
  jQuery(document).ready(function() {
    infoBoxFadeOut();
  })

</script>