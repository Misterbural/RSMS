<div class="container-fluid">
  <% if notice %>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Successfuly</h3>
    </div>
    <div class="panel-body">
      <%= notice %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">All Sendeds</h1>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Envoyé à</th>
        <th>Texte</th>
        <th colspan="3"></th>
      </tr>
    </thead>
     <tbody>
        <% @sendeds.each do |sended| %>
          <tr>
            <td><%= sended.target %></td>
            <td><%= sended.content %></td>
            <td class="btn-position-table">
             <%= link_to sended, class: "btn btn-success" do %>
              <%= icon('eye', 'Show') %>
            <% end %>
              <%= link_to sended, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" do %>
              <%= icon('trash-o', 'Delete') %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
  <%= link_to 'New scheduled', new_scheduled_path, class: "btn btn-success"  %>
</div>

