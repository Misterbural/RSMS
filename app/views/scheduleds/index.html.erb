<!-- <p id="notice"><%= notice %></p> -->
<div class="container-fluid">
  <% if notice %>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Successfuly</h3>
    </div>
    <div class="panel-body">
      <%= notice %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">All Scheduleds</h1>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Content</th>
        <th>Send at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @scheduleds.each do |scheduled| %>
        <tr>
          <td><%= scheduled.id %></td>
          <td><%= scheduled.content %></td>
          <td><%= scheduled.send_at %></td>
          <td class="btn-position-table">
             <%= link_to scheduled, class: "btn btn-success" do %>
              <%= icon('eye', 'Show') %>
            <% end %>
            <%= link_to edit_scheduled_path(scheduled), class: "btn btn-info" do %>
               <%= icon('edit', 'Edit') %>
            <% end %>
            
            <%= link_to scheduled, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" do %>
              <%= icon('trash-o', 'Delete') %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New scheduled', new_scheduled_path, class: "btn btn-success" %>
</div>