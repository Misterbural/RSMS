<div class="container-fluid">
  <div class="row">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 connexion-form' }) do |f| %>
    <h2>Connexion - RSMS</h2>
      <%= f.input :email, autofocus: true, placeholder: "Ex : john.doe@example.tld" %>
      <%= f.input :password, autocomplete: "off", placeholder: "Your password" %>
      <%= f.button :submit, "Log in" %>
      
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end -%>
    <% end %>
  </div>
</div>
