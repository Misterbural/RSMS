<!DOCTYPE html>
<html>
<head>
  <title>RSMS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
<% if user_signed_in? %>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
    		<div class="navbar-header">
    			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        			<span class="sr-only">Toggle navigation</span>
        			<span class="icon-bar"></span>
        			<span class="icon-bar"></span>
        			<span class="icon-bar"></span>
    			</button>
    			<%= link_to 'RSMS','/', class: "navbar-brand"%>
    		</div>
    		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
   				<ul class="nav navbar-nav">
   					<li class="dropdown">
        				<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">SMS<span class="caret"></span></a>
          				<ul class="dropdown-menu" role="menu">
            				<li><%= link_to 'Créer','/sendeds/new'%></li>
            				<li class="divider"></li>
            				<li><%= link_to 'Recu','/receiveds'%></li>
            				<li><%= link_to 'Envoyé','/sendeds'%></li>
            				<li><%= link_to 'Programmé','/scheduleds'%></li>
          				</ul>
          			</li>
          			<li class="dropdown">
        				<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Répertoire<span class="caret"></span></a>
          				<ul class="dropdown-menu" role="menu">
            				<li><%= link_to 'Contacts','/contacts'%></li>
            				<li><%= link_to 'Groupes','/groups'%></li>
          				</ul>
        			</li>
        			<li><%= link_to 'Commandes','/commands'%></li>
       			</ul>
      			<ul class="nav navbar-nav navbar-right">
        			<li class="dropdown">
        				<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
          				<ul class="dropdown-menu" role="menu">
            				<li><%= link_to 'Mon compte','/users/edit'%></li>
            				<li class="divider"></li>
            				<li><%= link_to('Déconnexion', destroy_user_session_path, :method => :delete) %></li>
          				</ul>
        			</li>
      			</ul>
    		</div>
  		</div>
	</nav>	
<% end %>
<%= yield %>

</body>
</html>
